@model SampleSecureWeb.ViewModel.LoginViewModel;

<div Class = "row">
    <div  Class="col-lg-4">
        <div Class="card mb-4">
            <div Class="card-header">
                Login
            </div>
            <div class="card-body">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-succes">
                        @ViewBag.Message 
                    </div>
                }
                
                <form asp-action="Login">
                    <div class="form-group">
                        <input asp-for="Username" class="form-control form-control-user" placeholder="">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control form-control-user" placeholder="">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                      <div class="form-group">
                        <label asp-for="RememberLogin" class="form-check-label">
                        <input asp-for="RememberLogin" class="form-check-input">
                        <strong>Remember Me</strong>
                        </label>
                    </div>
                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Login"/>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}